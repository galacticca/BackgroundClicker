<Window x:Class="BackgroundClicker.Wpf.CreditsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Credits" Height="600" Width="550"
        WindowStartupLocation="CenterOwner" WindowStyle="None"
        ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent"
        FontFamily="./Fonts/#Roboto">

    <Window.Resources>
        
        <Style x:Key="ModernScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border x:Name="border" CornerRadius="4" Background="#4A5568" SnapsToDevicePixels="True"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#A0AEC0"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00F2EA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="12"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Track x:Name="PART_Track" IsDirectionReversed="true" Focusable="false">
                            <Track.Thumb>
                                <Thumb Style="{StaticResource ModernScrollBarThumb}"/>
                            </Track.Thumb>
                        </Track>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#00F2EA"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>

        <Style x:Key="BodyText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#CBD5E0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="22"/>
        </Style>

        <Style x:Key="LinkText" TargetType="TextBlock" BasedOn="{StaticResource BodyText}">
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Foreground" Value="#4DD0E1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="#22FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#CCFF0055"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" BorderThickness="1" BorderBrush="#44FFFFFF" MouseLeftButtonDown="TitleBar_Drag">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F2027" Offset="0"/>
                <GradientStop Color="#203A43" Offset="0.5"/>
                <GradientStop Color="#2C5364" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Button Style="{StaticResource CloseButton}"
                    Content="✕"
                    FontWeight="Bold"
                    Click="CloseButton_Click"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,15,0"
                    Width="30" Height="30"/>

            <ScrollViewer Margin="30, 20, 50, 30" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Credits &amp; Features" Style="{StaticResource TitleText}" Margin="0,10,0,5"/>
                    <TextBlock Text="Version 0.9.1 BETA" Style="{StaticResource BodyText}" Foreground="#A0AEC0"/>

                    <Separator Background="#33FFFFFF" Margin="0,15,0,10"/>

                    <TextBlock Text="Author" Style="{StaticResource HeaderText}"/>
                    <TextBlock Style="{StaticResource BodyText}">
                        <Run>This application was designed and developed by TheHolyOneZ.</Run>
                    </TextBlock>
                    <TextBlock Name="GitHubLink" Style="{StaticResource LinkText}" Text="https://github.com/TheHolyOneZ"/>

                    <TextBlock Text="Core Application Features" Style="{StaticResource HeaderText}"/>
                    <StackPanel Margin="15,8,0,0">
                        <TextBlock Style="{StaticResource BodyText}" Margin="0,0,0,4"><Run FontWeight="SemiBold" Foreground="#00F2EA">•</Run> <Bold>Background Clicking:</Bold> Send clicks to windows without moving your mouse or losing focus.</TextBlock>
                        <TextBlock Style="{StaticResource BodyText}" Margin="0,0,0,4"><Run FontWeight="SemiBold" Foreground="#00F2EA">•</Run> <Bold>Click Sequencing:</Bold> Create complex chains of clicks with custom delays for advanced automation.</TextBlock>
                        <TextBlock Style="{StaticResource BodyText}" Margin="0,0,0,4"><Run FontWeight="SemiBold" Foreground="#00F2EA">•</Run> <Bold>Profile Management:</Bold> Save and load different configurations for all your tasks.</TextBlock>
                        <TextBlock Style="{StaticResource BodyText}" Margin="0,0,0,4"><Run FontWeight="SemiBold" Foreground="#00F2EA">•</Run> <Bold>Humanization:</Bold> Use click jitter and randomized intervals to simulate human-like behavior.</TextBlock>
                        <TextBlock Style="{StaticResource BodyText}" Margin="0,0,0,4"><Run FontWeight="SemiBold" Foreground="#00F2EA">•</Run> <Bold>Dual Click Modes:</Bold> Switch to a 'Blocking' click for apps that ignore background events.</TextBlock>
                        <TextBlock Style="{StaticResource BodyText}" Margin="0,0,0,4"><Run FontWeight="SemiBold" Foreground="#00F2EA">•</Run> <Bold>Global Hotkey:</Bold> Start and stop automation from anywhere with the F8 key.</TextBlock>
                    </StackPanel>
                    
                    <TextBlock Text="Core Technology" Style="{StaticResource HeaderText}"/>
                    <TextBlock Style="{StaticResource BodyText}">
                        Built with WPF and C#, this application uses the Win32 API to send background mouse events, allowing it to click windows without taking control of the user's cursor.
                    </TextBlock>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
