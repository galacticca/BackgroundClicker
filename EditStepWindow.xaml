<Window x:Class="BackgroundClicker.Wpf.EditStepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Sequence Step" Height="250" Width="400"
        WindowStartupLocation="CenterOwner" WindowStyle="None"
        ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent"
        Loaded="Window_Loaded">
    <Border CornerRadius="10" BorderThickness="1" BorderBrush="#4A5568">
        <Border.Background>
            <SolidColorBrush Color="#1A202C"/>
        </Border.Background>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            
            <TextBlock Grid.Row="0" Text="Edit Step Details" FontSize="20" FontWeight="SemiBold" Foreground="#E2E8F0" Margin="0,0,0,20"/>

            
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Delay After Step (Seconds)" Foreground="#A0AEC0" FontSize="12" Margin="0,0,0,5"/>
                <TextBox x:Name="DelayTextBox" Padding="6" Background="#2D3748" Foreground="White" BorderThickness="0"/>

                <CheckBox x:Name="DoubleClickCheckBox" Content="Send a Double Click for this step" 
                          Foreground="#CBD5E0" Margin="0,20,0,0"/>
            </StackPanel>

            
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Width="80" Height="30" Margin="0,0,10,0" Click="SaveButton_Click"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Background="#00A36C" Foreground="White"/>
                <Button Content="Cancel" Width="80" Height="30" Click="CancelButton_Click"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Background="#4A5568" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
