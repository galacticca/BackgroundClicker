<Window x:Class="BackgroundClicker.Wpf.WatermarkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Watermark" Height="400" Width="600"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent" ResizeMode="NoResize">

    <Border CornerRadius="15" BorderThickness="1" BorderBrush="#33FFFFFF" Background="#D8111111">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" 
                           Foreground="White" Opacity="0.9" VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontWeight="SemiBold"/>
                <Button Content="X" Width="30" Height="30" Click="CloseButton_Click" 
                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Background="#CCFF0055" BorderThickness="0" FontWeight="Bold"/>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
                <TextBox x:Name="WatermarkTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Background="#1AFFFFFF"
                         Foreground="#EAEAEA"
                         BorderThickness="0"
                         FontFamily="Consolas"
                         FontSize="12"/>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
